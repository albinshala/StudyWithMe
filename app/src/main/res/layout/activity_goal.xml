<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Goal Description Input -->
        <EditText
            android:id="@+id/etGoalDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your goal description"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- Due Date Input -->
        <EditText
            android:id="@+id/etDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pick a due date"
            android:focusable="false"
            android:layout_below="@id/etGoalDescription"
            android:layout_marginBottom="16dp" />

        <!-- Save Goal Button -->
        <Button
            android:id="@+id/btnSaveGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Goal"
            android:layout_below="@id/etDueDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <!-- Goals Section -->
        <LinearLayout
            android:id="@+id/goalsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/btnSaveGoal"
            android:layout_marginTop="16dp" />
    </RelativeLayout>
</ScrollView>